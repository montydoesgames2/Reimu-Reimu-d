function string MISC.GetStringFromSlot(u8 slot)
{
	u8 Factor = 0x10 * (slot - 1)
	
	u8 part1 = u8[sharedmemory.MISCslots + Factor]
	u8 part2 = u8[sharedmemory.MISCslots + 1 + Factor]
	u8 part3 = u8[sharedmemory.MISCslots + 2 + Factor]
	u8 part4 = u8[sharedmemory.MISCslots + 3 + Factor]
	u8 part5 = u8[sharedmemory.MISCslots + 4 + Factor]
	u8 part6 = u8[sharedmemory.MISCslots + 5 + Factor]
	u8 part7 = u8[sharedmemory.MISCslots + 6 + Factor]
	u8 part8 = u8[sharedmemory.MISCslots + 7 + Factor]
	
	string name = u64(part1) + u64(part2 << 8) + u64(part3 << 16) + u64(part4 << 24) + u64(part5 << 32) + u64(part6 << 40) + u64(part7 << 48) + u64(part8 << 56)
	
	//debugLog(stringformat("Factor: %d", Factor))
	
	return name
}


function void MISC.SaveSlots(string name, u8 slot)
{
	u8 Factor = 0x10 * (slot - 1)
	
	u8[sharedmemory.MISCslots + Factor] = name
	u8[sharedmemory.MISCslots + 1 + Factor] = name >> 8
	u8[sharedmemory.MISCslots + 2 + Factor] = name >> 16
	u8[sharedmemory.MISCslots + 3 + Factor] = name >> 24
	u8[sharedmemory.MISCslots + 4 + Factor] = name >> 32
	u8[sharedmemory.MISCslots + 5 + Factor] = name >> 40
	u8[sharedmemory.MISCslots + 6 + Factor] = name >> 48
	u8[sharedmemory.MISCslots + 7 + Factor] = name >> 56
	
	//debugLog(stringformat("String saved: %s", name))
	
	if name == ""
	{
		u8[sharedmemory.MISCslots + Factor] = 0
		u8[sharedmemory.MISCslots + 1 + Factor] = 0
		u8[sharedmemory.MISCslots + 2 + Factor] = 0
		u8[sharedmemory.MISCslots + 3 + Factor] = 0
		u8[sharedmemory.MISCslots + 4 + Factor] = 0
		u8[sharedmemory.MISCslots + 5 + Factor] = 0
		u8[sharedmemory.MISCslots + 6 + Factor] = 0
		u8[sharedmemory.MISCslots + 7 + Factor] = 0
	}
	
	//SRAM.save(sharedmemory.MISCslots, 0x000, 0x08)
	#if EXTRA_SAVE_SLOTS_ACTIVE
		System.savePersistentData(sharedmemory.MISCslots, ESS_getSaveStr("MISC.slotdata"), 0xffff)
	#else
		System.savePersistentData(sharedmemory.MISCslots, "MISC.slotdata", 0xffff)
	#endif
}

function void SetMISCSlots()
{
	#if RMSSY_Active
		return
	#endif
	
	//Log = ((A0 - 0xffffb000) / 74) - 3
	
	// Loop simulates slots
	for (u8 i = 0x01; i < 0x09; ++i)
	{
		u8 char = MISC.GetCharFromString(MISC.GetStringFromSlot(i)) + 1 //add one here, because all slots need to be moved up by one to account for knuckles & tails
		// Debug message
		//debugLog(stringformat("Slot address: 0x%06x, Extra address: 0x%06x, Extra loaded: %03d", i, tempValue1, u8[tempValue1]))
		// Set an extra character if it has been saved
		if ((((A0 - 0xffffb000) / 74) - 3) == i && isValidChar(char) && char > 4)
		{
			A2 = 0xffffe6ac + ((i-1)*0x0a)
			if  u8[A2 + 0x00] == 0x80 //fix save slots that have been deleted
			{
				MISC.SaveSlots("", i)
				u16[A0 + 0x34] = 0
			}
			else if u16[A0 + 0x34] != char
			{
				u16[A0 + 0x34] = char
			}
		}
	}
}

